<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_quest_layout"
    android:orientation="vertical"
    android:background="@drawable/popup_background_roundedcorners"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_marginTop="42dp"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:minHeight="64dp"
            android:src="@drawable/hand_wash" />

        <TextView
        android:id="@+id/quest_name"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="Quest Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>

    <TextView
        android:id="@+id/quest_desciption"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Quest Description"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Button
            android:id="@+id/complete_quest_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal|bottom"
            android:text="Quest starten"/>

    </LinearLayout>
