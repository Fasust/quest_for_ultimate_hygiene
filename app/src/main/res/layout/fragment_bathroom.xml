<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bathroom">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/level_counter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80DEEA"
            android:gravity="center"
            android:text="Badezimmer" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="523dp"
            android:background="@null"
            android:foregroundGravity="center_vertical|clip_horizontal|center|center_horizontal"
            android:src="@drawable/share2" />

    </RelativeLayout>

</FrameLayout>